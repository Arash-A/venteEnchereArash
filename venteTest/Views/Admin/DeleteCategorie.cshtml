@using venteTest.Resources.Views

@model venteTest.Models.AdminViewModels.CategorieViewModel

@{
    ViewData["Title"] = @StringsAdmin.DeleteTitle;
}

<h2>@StringsAdmin.DeleteTitle</h2>

<h3>@StringsAdmin.DeleteMessage</h3>
<div>
    <h4>Categorie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategorieId" />
        <input type="submit" value="@StringsAdmin.DeleteButton" class="btn btn-warning" /> |
        <a asp-action="Index">@StringsAdmin.EditBackToList</a>
    </form>
</div>
