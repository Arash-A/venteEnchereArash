
@{
    ViewData["Title"] = "Ventes";
}
@model venteTest.Models.AdminViewModels.SendVentesReportViewModel

<h2>Sales</h2>
<h4>Sales and commissions for a given year</h4>
<form asp-action="Ventes">
    <div class="form-group">
        <label asp-for="Year" class="control-label font-weight-bold">Year</label>
        <select asp-for="Year" class="form-control w-auto">
            <option>Select Year...</option>
            @foreach (var item in ViewBag.Years) {
                <option value=@item>@item</option>
            }
        </select>
    </div>
    <button type="submit" class="btn-lg btn-warning">Email PDF report</button>
</form>
