@model IEnumerable<venteTest.Models.AdminViewModels.CategorieViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Object Categorie Management</h2>
<h5 class="text-primary messageTempSb">@TempData["message"]</h5>

<p>
    <a asp-action="CreateCategorie">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="EditCategorie" asp-route-id="@item.CategorieId">Edit</a> |
                    <a asp-action="DeleteCategorie" asp-route-id="@item.CategorieId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
