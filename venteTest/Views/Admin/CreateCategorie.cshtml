@using venteTest.Resources.Views

@model venteTest.Models.AdminViewModels.CategorieViewModel

@{
    ViewData["Title"] = @StringsAdmin.CreateTitle;
}

<h2>@StringsAdmin.CreateTitle</h2>

<h4>@StringsAdmin.CreateCategorie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCategorie">
            @if (!ViewData.ModelState.IsValid)
            {
                @Html.ValidationMessage("CustomValid", "", new { @class = "text-danger mb-2" })
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@StringsAdmin.ButtonCreer" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@StringsAdmin.EditBackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
