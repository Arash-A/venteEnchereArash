@model venteTest.Models.HomeViewModels.EmailFormModel

@using venteTest.Resources.Views

@{
    ViewBag.Title = "Contact";
}

<head>
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>

<h2>@ViewBag.Title.</h2>



@*@using (Html.BeginForm())*@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>@StringsHome.ContactDescription</h4>
    <hr />
    <div class="form-group">
        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromEmail)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>

    //RECAPTCHA
    <div class="form-group">
        @SharedStrings.ContactReCaptcha
        <div class="g-recaptcha" data-sitekey="6Ld0LFcUAAAAAFMGpTLIQS3i-8twMJCyVLF-gMmT">

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="@SharedStrings.ContactBoutonEnvoyer" />
        </div>
    </div>
}
