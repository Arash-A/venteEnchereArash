<meta charset="utf-8" />

@using Microsoft.AspNetCore.Identity
@using venteTest.Models
@*@using venteTest.Resources.Views*@

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle mr-4" type="button" id="menu1" data-toggle="dropdown">
                        <img src="~/images/auction_user.png" class="pull-left dropdown-toggle" width="30" height="30" alt="" />
                        <span class="caret"></span>
                    </button>
                    <div class="dropdown-menu">
                        <a asp-area="" asp-controller="Objets" asp-action="Create" class="dropdown-item" role="menuitem" tabindex="-1">Ajouter un objet</a>
                        <a asp-area="" asp-controller="Objets" asp-action="Index" class="dropdown-item" role="menuitem" tabindex="-1">Mes objets a vendre</a>
                        <a asp-area="" asp-controller="Objets" asp-action="Index" class="dropdown-item" role="menuitem" tabindex="-1">Mes objet a acheter</a>
                        <a asp-area="" asp-controller="Objets" asp-action="Index" class="dropdown-item" role="menuitem" tabindex="-1">Mon histoire</a>
                    </div>
                </div>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage" class="nav-link navbar-btn mr-2">Bonjour: @UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link mr-2"> Deconnecter</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link navbar-btn mr-2"> S'inscrire </a></li>
        <li><span class="nav-item" style="color:HighlightText"> ou </span></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link mr-2"> SeConnecter </a></li>
    </ul>
}
