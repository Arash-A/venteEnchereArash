@model venteTest.Models.ObjetViewModel.EvaluationViewModel

@{
    ViewData["Title"] = "EvaluerAchat";
    List<int> cotes = new List<int> { -3, -2, -1, 0, 1, 2, 3 };
}

<h2>Evaluation</h2>

<h4>Evaluation on seller : @Model.leUser.Prenom @Model.leUser.Nom (@Model.leUser.Email)</h4> @*Acheteur ou Vendeur*@
<h4>Object @Model.Objet.ObjetID : @Model.Objet.Nom (@Model.Objet.Description)</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EvaluerAchat">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cote" class="control-label"></label>
                <select asp-for="Cote" class="form-control" asp-items="@(new SelectList(@cotes))"></select>
                <span asp-validation-for="Cote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commentaire" class="control-label"></label>
                <textarea asp-for="Commentaire" rows="5" cols="40" class="form-control"></textarea>
                <span asp-validation-for="Commentaire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ObjetId" value="@Model.Objet.ObjetID" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

