@model venteTest.Models.Enchere

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Miser</title>
</head>
<body>

<h4>Enchere</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Miser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ObjetId" class="control-label"></label>
                <input asp-for="ObjetId" class="form-control" readonly />

            </div>

            <div class="form-group">
                <span>Leading Bid</span>
                <label asp-for="Niveau" class="control-label" hidden></label>
                <input asp-for="Niveau" class="form-control" hidden />
                <input value="@Model.Niveau" class="form-control" disabled />
                <span asp-validation-for="Niveau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MiseMax" class="control-label"></label>
                <input asp-for="MiseMax" class="form-control" value="" />
                <span asp-validation-for="MiseMax" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
