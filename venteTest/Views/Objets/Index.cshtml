@model IEnumerable<venteTest.Models.Objet>

@{
    ViewData["Title"] = "IndexNew";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mest objets à vendre</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nom)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrixDepart)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateInscription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateLimite)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DureeMiseVente) <br />[Day(s)]
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.imageUrl)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrixDepart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateInscription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateLimite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DureeMiseVente)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>*@
            <td>
                <img src="@item.imageUrl" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categorie.Nom)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ObjetID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ObjetID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ObjetID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
