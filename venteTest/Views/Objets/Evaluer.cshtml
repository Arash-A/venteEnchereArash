@model venteTest.Models.AchatEvaluation

@{
    ViewData["Title"] = "Evaluer";
    List<int> cotes = new List<int> { -3, -2, -1, 0, 1, 2, 3 };
}

<h2>Evaluer</h2>

<h4>AchatEvaluation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Evaluer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Cote" class="control-label"></label>
                <select asp-for="Cote" class="form-control" asp-items="@(new SelectList(@cotes))"></select>
                <span asp-validation-for="Cote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commentaire" class="control-label"></label>
                <textarea asp-for="Commentaire" rows="5" cols="40" class="form-control"></textarea>
                <span asp-validation-for="Commentaire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
