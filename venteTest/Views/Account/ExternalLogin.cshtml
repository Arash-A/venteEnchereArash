@model ExternalLoginViewModel
@using venteTest.Resources.Views
@{
    ViewData["Title"] = @StringsAccount.Register;
}

<h2>@ViewData["Title"]</h2>
<h4>@StringsAccount.AssocierSon @ViewData["LoginProvider"] @StringsAccount.AssocierCompte</h4>
<hr />

<p class="text-info">
    You've successfully authenticated with <strong>@ViewData["LoginProvider"]</strong>.
    @StringsAccount.EntrerCourriel
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">@StringsAccount.BoutonRegister</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
